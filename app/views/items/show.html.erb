<h2>Shopping Cart</h2>

<div class= "items_in_cart">


  <% @items.each do |n| %>
    <div class = "col-lg-10">
      <div>
        <h4>Item:</h4>
        <h4 class="item" ><%= n.product_option.name %></h4>
        <h4>Quantity:</h4>
        <h4><%= n.quantity %></h4>
        <h4>Price Each:</h4>
        <h4><%= number_to_currency n.product_option.price_in_cents.to_f/100 %></h4>
        <h4>Item Total:</h4>
        <h4><%= number_to_currency  n.product_option.price_in_cents * n.quantity.to_f  %></h4>
      </div>
    </div>
  <% end %>
  <h3>Items in cart = <%= @items.count %></h3>

  <h3>Order total=
    <% sum = 0  %>
    <% @items.each do |n| %>
    <% p = n.product_option.price_in_cents %>
    <% sum += p  %>
    <% sum.to_f/100  %>
    <% end %>
    <%= number_to_currency sum.to_f/100 %>
  </h3>

</div>

<div class= "checkout">
  <%= form_tag "/cart/checkout/:id" do %>
  <input type="hidden" name="order[total]" value="<%= sum %>" />
  <input type="hidden" name="order[status]" value="browsing" />
  <input type="hidden" name="order[id]" value="<%= @current_order.id %>" />
  <%= submit_tag "Check Out" %>
  <% end %>

</div>
